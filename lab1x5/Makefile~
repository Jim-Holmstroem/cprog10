MOD = vector main

SRC = $(MOD:=.cpp)
HDR = $(MOD:=.h)
OBJ = $(MOD:=.o)

FLDR = lab1x5

CFLAG = -c -DDBOOL -Wall
LFLAG =

CTEST = -DCAL # recompiles main.cpp if Makefile is updated

all:
	make lab1x5

lab1x5 : $(OBJ) Makefile
	g++ $(OBJ) -o lab1x5

vector.o : vector.cpp vector.h Makefile
	g++ $(CFLAG) $(CTEST) vector.cpp

main.o : main.cpp main.h Makefile
	g++ $(CFLAG) $(CTEST) main.cpp

clean:
	rm -f *.o lab1x5
	
run:
	./lab1x5
